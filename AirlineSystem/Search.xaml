<UserControl
    x:Class="AirlineSystem.Search"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AirlineSystem"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFF8FAFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->
        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#FFEF4444" />
                    <GradientStop Offset="0.5" Color="#FFDC2626" />
                    <GradientStop Offset="1" Color="#FFEF4444" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Direction="270"
                    Opacity="0.3"
                    ShadowDepth="5"
                    Color="#22000000" />
            </Border.Effect>

            <Grid Margin="30,20">
                <StackPanel VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,15,0"
                            VerticalAlignment="Center"
                            FontSize="36"
                            Text="🔍" />
                        <StackPanel>
                            <TextBlock
                                FontFamily="Segoe UI"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="TICKET SEARCH" />
                            <TextBlock
                                FontSize="13"
                                Foreground="#CCFFFFFF"
                                Text="Find your booking by Phone Number or Ticket ID" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="40,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Search Box Section  -->
                <Border
                    Grid.Row="0"
                    Margin="0,0,0,30"
                    Padding="30"
                    Background="White"
                    BorderBrush="#FFE5E7EB"
                    BorderThickness="1"
                    CornerRadius="15">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Direction="315"
                            Opacity="0.1"
                            ShadowDepth="5"
                            Color="#22000000" />
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,15"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#FF1F2937"
                            Text="🎫 Search Your Booking" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Search Input  -->
                            <Border
                                Grid.Column="0"
                                Background="#FFF9FAFB"
                                BorderBrush="#FFD1D5DB"
                                BorderThickness="2"
                                CornerRadius="10">
                                <Grid>
                                    <TextBox
                                        x:Name="SearchBox"
                                        Padding="15,12"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="15"
                                        TextChanged="SearchBox_TextChanged" />
                                    <TextBlock
                                        x:Name="SearchPlaceholder"
                                        Margin="15,12"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="#FF9CA3AF"
                                        IsHitTestVisible="False"
                                        Text="Enter Phone Number or Ticket ID..." />
                                </Grid>
                            </Border>

                            <!--  Search Button  -->
                            <Border
                                Grid.Column="2"
                                Background="#FFEF4444"
                                CornerRadius="10"
                                Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFDC2626" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Button
                                    x:Name="SearchButton"
                                    Width="140"
                                    Height="48"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="SearchButton_Click"
                                    Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,8,0"
                                            FontSize="16"
                                            Text="🔍" />
                                        <TextBlock
                                            FontSize="15"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="Search" />
                                    </StackPanel>
                                </Button>
                            </Border>
                        </Grid>

                        <!--  Quick Tips  -->
                        <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
                            <TextBlock
                                FontSize="12"
                                Foreground="#FF6B7280"
                                Text="💡 Tip: You can search by " />
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#FFEF4444"
                                Text="10-digit phone number" />
                            <TextBlock
                                FontSize="12"
                                Foreground="#FF6B7280"
                                Text=" or " />
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#FFEF4444"
                                Text="Ticket ID (TK12345)" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!--  Search Results Header  -->
                <Border
                    x:Name="ResultsHeader"
                    Grid.Row="1"
                    Margin="0,0,0,15"
                    Padding="20"
                    Background="White"
                    BorderBrush="#FFE5E7EB"
                    BorderThickness="1"
                    CornerRadius="10"
                    Visibility="Collapsed">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#FF1F2937"
                                Text="Search Results:" />
                            <TextBlock
                                x:Name="ResultCount"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="#FF6B7280"
                                Text="0 tickets found" />
                        </StackPanel>

                        <Button
                            x:Name="ClearButton"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ClearButton_Click"
                            Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="12"
                                    Text="✖️" />
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="#FFEF4444"
                                    Text="Clear Search" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!--  Results List  -->
                <ScrollViewer
                    x:Name="ResultsScrollViewer"
                    Grid.Row="2"
                    VerticalScrollBarVisibility="Auto"
                    Visibility="Collapsed">
                    <ItemsControl x:Name="ResultsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,15"
                                    Padding="25"
                                    Background="White"
                                    BorderBrush="#FFE5E7EB"
                                    BorderThickness="1"
                                    CornerRadius="12">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="15"
                                            Direction="315"
                                            Opacity="0.08"
                                            ShadowDepth="3"
                                            Color="#22000000" />
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Ticket Header  -->
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <Border
                                                    Padding="10,6"
                                                    Background="#FFDCFCE7"
                                                    CornerRadius="6">
                                                    <TextBlock
                                                        FontSize="13"
                                                        FontWeight="Bold"
                                                        Foreground="#FF16A34A"
                                                        Text="{Binding TicketId}" />
                                                </Border>
                                                <Border
                                                    Margin="10,0,0,0"
                                                    Padding="10,6"
                                                    Background="#FFF3E8FF"
                                                    CornerRadius="6">
                                                    <TextBlock
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#FF9333EA"
                                                        Text="{Binding TicketTypeName}" />
                                                </Border>
                                            </StackPanel>

                                            <TextBlock
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                Foreground="#FFEF4444"
                                                Text="{Binding TicketPrice, StringFormat='${0:N2}'}" />
                                        </Grid>

                                        <!--  Flight & Passenger Info  -->
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Flight Info  -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock
                                                    Margin="0,0,0,8"
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Foreground="#FF6B7280"
                                                    Text="FLIGHT DETAILS" />
                                                <TextBlock FontSize="13" Foreground="#FF1F2937">
                                                    <Run Text="✈️ Flight: " />
                                                    <Run FontWeight="SemiBold" Text="{Binding FlightNumber, Mode=OneWay}" />
                                                </TextBlock>
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="13"
                                                    Foreground="#FF1F2937">
                                                    <Run Text="🛫 Route: " />
                                                    <Run FontWeight="SemiBold" Text="{Binding FlightRoute, Mode=OneWay}" />
                                                </TextBlock>
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="13"
                                                    Foreground="#FF1F2937">
                                                    <Run Text="📅 Date: " />
                                                    <Run FontWeight="SemiBold" Text="{Binding DepartureDate, Mode=OneWay}" />
                                                </TextBlock>
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="13"
                                                    Foreground="#FF1F2937">
                                                    <Run Text="💺 Seat: " />
                                                    <Run FontWeight="SemiBold" Text="{Binding Seat, Mode=OneWay}" />
                                                </TextBlock>
                                            </StackPanel>

                                            <!--  Passenger Info  -->
                                            <StackPanel Grid.Column="2">
                                                <TextBlock
                                                    Margin="0,0,0,8"
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Foreground="#FF6B7280"
                                                    Text="PASSENGER INFO" />
                                                <TextBlock FontSize="13" Foreground="#FF1F2937">
                                                    <Run Text="👤 Name: " />
                                                    <Run FontWeight="SemiBold" Text="{Binding PassengerName, Mode=OneWay}" />
                                                </TextBlock>
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="13"
                                                    Foreground="#FF1F2937">
                                                    <Run Text="📞 Phone: " />
                                                    <Run FontWeight="SemiBold" Text="{Binding PassengerPhone, Mode=OneWay}" />
                                                </TextBlock>
                                                <TextBlock
                                                    Margin="0,4,0,0"
                                                    FontSize="13"
                                                    Foreground="#FF1F2937">
                                                    <Run Text="✉️ Email: " />
                                                    <Run FontWeight="SemiBold" Text="{Binding PassengerEmail, Mode=OneWay}" />
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>

                                        <!--  Action Buttons  -->
                                        <Grid Grid.Row="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Support Button  -->
                                            <Border
                                                Grid.Column="0"
                                                Background="#FF3B82F6"
                                                CornerRadius="8"
                                                Cursor="Hand">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FF2563EB" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Button
                                                    Height="42"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Click="SupportButton_Click"
                                                    Cursor="Hand"
                                                    Tag="{Binding}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock
                                                            Margin="0,0,8,0"
                                                            FontSize="14"
                                                            Text="💬" />
                                                        <TextBlock
                                                            FontSize="14"
                                                            FontWeight="SemiBold"
                                                            Foreground="White"
                                                            Text="Get Support" />
                                                    </StackPanel>
                                                </Button>
                                            </Border>

                                            <!--  Cancel Button  -->
                                            <Border
                                                Grid.Column="2"
                                                Background="#FFEF4444"
                                                CornerRadius="8"
                                                Cursor="Hand">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFDC2626" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Button
                                                    Height="42"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Click="CancelBookingButton_Click"
                                                    Cursor="Hand"
                                                    Tag="{Binding}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock
                                                            Margin="0,0,8,0"
                                                            FontSize="14"
                                                            Text="❌" />
                                                        <TextBlock
                                                            FontSize="14"
                                                            FontWeight="Bold"
                                                            Foreground="White"
                                                            Text="Cancel Booking" />
                                                    </StackPanel>
                                                </Button>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!--  No Results Message  -->
                <Border
                    x:Name="NoResultsMessage"
                    Grid.Row="2"
                    Padding="40"
                    Background="White"
                    BorderBrush="#FFE5E7EB"
                    BorderThickness="1"
                    CornerRadius="15"
                    Visibility="Visible">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,15"
                            HorizontalAlignment="Center"
                            FontSize="64"
                            Text="🔍" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="#FF1F2937"
                            Text="No tickets found" />
                        <TextBlock
                            Margin="0,8,0,0"
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="#FF6B7280"
                            Text="Try searching with your phone number or ticket ID"
                            TextAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>