<Window
    x:Class="AirlineSystem.SelectionFlight"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AirlineSystem"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Flight Selection"
    Width="900"
    Height="600"
    Background="#FFF2F6FA"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Height="60"
            Background="#FF4A90E2">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Segoe UI"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                Text="✈️ SELECT YOUR FLIGHT" />
        </Border>

        <!--  Main Content  -->
        <Border
            Grid.Row="1"
            Margin="20"
            Background="White"
            BorderBrush="#FFE0E0E0"
            BorderThickness="1"
            CornerRadius="10">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Search/Filter Section  -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="#FF333333"
                        Text="Available Flights:" />

                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#FF666666"
                        Text="Select a flight to continue" />
                </Grid>

                <!--  Flight List  -->
                <Border
                    Grid.Row="1"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    CornerRadius="5">

                    <ListBox
                        x:Name="lstFlights"
                        Padding="10"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        BorderThickness="0"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectionMode="Single">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    MinHeight="80"
                                    Margin="5"
                                    Padding="15"
                                    Background="White"
                                    BorderBrush="#FFE0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="8">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" MinWidth="120.583" />
                                            <ColumnDefinition Width="Auto" MinWidth="134" />
                                            <ColumnDefinition Width="Auto" MinWidth="127.617" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="#FF333333"
                                                Text="{Binding FlightName}" />
                                            <TextBlock
                                                Margin="0,2,0,0"
                                                FontSize="12"
                                                Foreground="#FF666666"
                                                Text="{Binding Route}" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="5,0,20,0">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Text="{Binding DepartureTime}" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="10"
                                                Foreground="#FF666666"
                                                Text="Departure" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Text="{Binding AvailableSeats}" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="10"
                                                Foreground="#FF666666"
                                                Text="Available Seats" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="3">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="#FF169029"
                                                Text="{Binding Price}" />

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="10"
                                                Foreground="#FF666666"
                                                Text="Price" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FFE6F3FF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Border>
            </Grid>
        </Border>

        <!--  Action Buttons  -->
        <Border
            Grid.Row="2"
            Padding="20,15"
            Background="White"
            BorderBrush="#FFE0E0E0"
            BorderThickness="0,1,0,0">

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

                <Button
                    Width="100"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="#FFE0E0E0"
                    BorderThickness="0"
                    Click="Cancel_Click"
                    Content="Cancel"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#FF333333" />

                <Button
                    Width="120"
                    Height="40"
                    Background="#FF4A90E2"
                    BorderThickness="0"
                    Click="SelectFlight_Click"
                    Content="Select Flight"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White" />
            </StackPanel>
        </Border>

    </Grid>
</Window>