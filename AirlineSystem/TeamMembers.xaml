<UserControl
    x:Class="AirlineSystem.TeamMembers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AirlineSystem"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid Background="#FFF5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->
        <Border
            Grid.Row="0"
            Height="104"
            Padding="40,30"
            VerticalAlignment="Top"
            Background="White"
            BorderBrush="#FFE0E6ED"
            BorderThickness="0,0,0,2">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="36"
                    FontWeight="Bold"
                    Foreground="#FF2E3B4E"
                    Text="OUR TEAM" />
            </StackPanel>
        </Border>

        <!--  Team Members Grid  -->
        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar">
                    <Setter Property="Width" Value="8" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid>
                                    <Track
                                        x:Name="PART_Track"
                                        Width="6"
                                        HorizontalAlignment="Center"
                                        IsDirectionReversed="True">
                                        <Track.Thumb>
                                            <Thumb>
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border
                                                            Width="6"
                                                            Background="#FFCCCCCC"
                                                            CornerRadius="3">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#FF999999" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ScrollViewer.Resources>

            <StackPanel Margin="60,40,60,40">

                <!--  Leader Card  -->
                <Border
                    Margin="0,0,0,30"
                    Padding="40,30"
                    Background="White"
                    BorderBrush="#FF4A90E2"
                    BorderThickness="3"
                    CornerRadius="20">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Direction="315"
                            Opacity="0.3"
                            ShadowDepth="8"
                            Color="#22000000" />
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Avatar  -->
                        <Border
                            Grid.Column="0"
                            Width="100"
                            Height="100"
                            Margin="0,0,30,0"
                            VerticalAlignment="Center"
                            Background="#FF4A90E2"
                            CornerRadius="50">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="10"
                                    Direction="315"
                                    Opacity="0.5"
                                    ShadowDepth="3"
                                    Color="#664A90E2" />
                            </Border.Effect>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="32"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="NHH" />
                        </Border>

                        <!--  Info  -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="28"
                                    FontWeight="Bold"
                                    Foreground="#FF2E3B4E"
                                    Text="Nguyễn Hữu Huynh" />
                                <Border
                                    Margin="15,0,0,0"
                                    Padding="12,4"
                                    VerticalAlignment="Center"
                                    Background="#FFFFD700"
                                    CornerRadius="12">
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Foreground="#FF2E3B4E"
                                        Text="LEADER" />
                                </Border>
                            </StackPanel>
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="18"
                                Foreground="#FF666666"
                                Text="Student ID: 24110021" />
                            <TextBlock
                                FontSize="14"
                                FontStyle="Italic"
                                Foreground="#FF999999"
                                Text="Project Manager,  Lead Develope, Frontend Developer" />
                        </StackPanel>

                        <!--  Crown Icon  -->
                        <TextBlock
                            Grid.Column="2"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="48"
                            Text="👑" />
                    </Grid>
                </Border>

                <!--  Team Members Grid  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Member 1: Nguyễn Bảo Huy  -->
                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,15,15"
                        Padding="25,20"
                        Background="White"
                        BorderBrush="#FFE0E6ED"
                        BorderThickness="2"
                        CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="0.2"
                                ShadowDepth="5"
                                Color="#22000000" />
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="70"
                                Height="70"
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                Background="#FF50C878"
                                CornerRadius="35">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="NBH" />
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="#FF2E3B4E"
                                    Text="Nguyễn Bảo Huy" />
                                <TextBlock
                                    Margin="0,0,0,3"
                                    FontSize="14"
                                    Foreground="#FF666666"
                                    Text="ID: 24110020" />
                                <TextBlock
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="#FF999999"
                                    Text="Backend Developer" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Member 2: Huỳnh Viết Chung  -->
                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="15,0,0,15"
                        Padding="25,20"
                        Background="White"
                        BorderBrush="#FFE0E6ED"
                        BorderThickness="2"
                        CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="0.2"
                                ShadowDepth="5"
                                Color="#22000000" />
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="70"
                                Height="70"
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                Background="#FFEF8354"
                                CornerRadius="35">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="HVC" />
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="#FF2E3B4E"
                                    Text="Huỳnh Viết Chung" />
                                <TextBlock
                                    Margin="0,0,0,3"
                                    FontSize="14"
                                    Foreground="#FF666666"
                                    Text="ID: 24110009" />
                                <TextBlock
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="#FF999999"
                                    Text="Backend Developer" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Member 3: Lê Quốc Cường  -->
                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,15,0"
                        Padding="25,20"
                        Background="White"
                        BorderBrush="#FFE0E6ED"
                        BorderThickness="2"
                        CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="0.2"
                                ShadowDepth="5"
                                Color="#22000000" />
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="70"
                                Height="70"
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                Background="#FFE91E63"
                                CornerRadius="35">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="LQC" />
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="#FF2E3B4E"
                                    Text="Lê Quốc Cường" />
                                <TextBlock
                                    Margin="0,0,0,3"
                                    FontSize="14"
                                    Foreground="#FF666666"
                                    Text="ID: 24110174" />
                                <TextBlock
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="#FF999999"
                                    Text="Backend Developer" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Member 4: Nguyễn Văn Trường Sa  -->
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="15,0,0,0"
                        Padding="25,20"
                        Background="White"
                        BorderBrush="#FFE0E6ED"
                        BorderThickness="2"
                        CornerRadius="15">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="0.2"
                                ShadowDepth="5"
                                Color="#22000000" />
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="70"
                                Height="70"
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                Background="#FF9C27B0"
                                CornerRadius="35">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="NVTS" />
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="#FF2E3B4E"
                                    Text="Nguyễn Văn Trường Sa" />
                                <TextBlock
                                    Margin="0,0,0,3"
                                    FontSize="14"
                                    Foreground="#FF666666"
                                    Text="ID: 24110317" />
                                <TextBlock
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="#FF999999"
                                    Text="Backend Developer" />
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>

            </StackPanel>
        </ScrollViewer>

        <!--  Footer  -->

    </Grid>
</UserControl>