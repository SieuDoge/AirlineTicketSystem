<Window
    x:Class="AirlineSystem.TicketInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ticket Information"
    Width="450"
    Height="800"
    ResizeMode="NoResize">

    <Grid Background="#FFF5F5F5">

        <!--  Success Animation Background  -->
        <Ellipse
            Width="150"
            Height="150"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="#4CAF50"
            Opacity="0.1" />

        <StackPanel MaxWidth="420" Margin="20,15,20,15">

            <!--  Success Header  -->
            <StackPanel
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    FontSize="32"
                    Text="✅" />
                <StackPanel>
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="Cascadia Code"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="#FF4CAF50"
                        Text="BOOKING CONFIRMED!" />
                    <TextBlock
                        Margin="0,3,0,0"
                        HorizontalAlignment="Center"
                        FontSize="11"
                        Foreground="#FF666666"
                        Text="Your flight ticket has been successfully booked" />
                </StackPanel>
            </StackPanel>

            <!--  Ticket Card  -->
            <Border
                Margin="0,0,0,15"
                Background="White"
                BorderBrush="#FFE0E0E0"
                BorderThickness="2"
                CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="15"
                        Direction="315"
                        Opacity="0.3"
                        ShadowDepth="6"
                        Color="#22000000" />
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Ticket Header  -->
                    <Border
                        Grid.Row="0"
                        Padding="20,15"
                        Background="#FF4A90E2"
                        CornerRadius="13,13,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Text="✈️" />
                                <StackPanel>
                                    <TextBlock
                                        FontFamily="Cascadia Code"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="BOARDING PASS" />
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="#CCFFFFFF"
                                        Text="Electronic Ticket" />
                                </StackPanel>
                            </StackPanel>
                            <TextBlock
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontFamily="Cascadia Code"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Flight.FlightNumber}" />
                        </Grid>
                    </Border>

                    <!--  Main Ticket Content  -->
                    <Grid Grid.Row="1" Margin="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Departure  -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,3"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="#FF666666"
                                Text="DEPARTURE" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontFamily="Cascadia Code"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#FF333333"
                                Text="{Binding Flight.Departure, Mode=OneWay}" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Text="{Binding Flight.DepartureTime, Mode=OneWay, StringFormat='{}{0:MMM dd, yyyy}'}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#FF4A90E2"
                                Text="{Binding Flight.DepartureTime, Mode=OneWay, StringFormat='{}{0: HH:mm}'}" />
                        </StackPanel>

                        <!--  Plane Icon  -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <Line
                                Stroke="#FFE0E0E0"
                                StrokeDashArray="3,3"
                                StrokeThickness="2"
                                X1="0"
                                X2="50"
                                Y1="20"
                                Y2="20" />
                            <TextBlock
                                Margin="0,-12,0,0"
                                HorizontalAlignment="Center"
                                FontSize="20"
                                Text="✈️" />
                        </StackPanel>

                        <!--  Arrival  -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock
                                Margin="0,0,0,3"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="#FF666666"
                                Text="ARRIVAL" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontFamily="Cascadia Code"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#FF333333"
                                Text="{Binding Flight.Destination, Mode=OneWay}" />
                            <TextBlock
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                FontSize="11"
                                FontWeight="SemiBold"
                                Text="{Binding DepartureTimePlus3, Mode=OneWay, StringFormat='{}{0:MMM dd, yyyy}'}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#FF4A90E2"
                                Text="{Binding DepartureTimePlus3, Mode=OneWay, StringFormat='{}{0: HH:mm}'}" />
                        </StackPanel>
                    </Grid>

                    <!--  Ticket Details  -->
                    <Border
                        Grid.Row="2"
                        Padding="20,15"
                        Background="#FFF8F9FA"
                        CornerRadius="0,0,13,13">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Row 1  -->
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,5,10">
                                <TextBlock
                                    FontSize="9"
                                    FontWeight="Bold"
                                    Foreground="#FF666666"
                                    Text="PASSENGER" />
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Text="{Binding Passenger.Name}"
                                    TextTrimming="CharacterEllipsis" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5,0,5,10">
                                <TextBlock
                                    FontSize="9"
                                    FontWeight="Bold"
                                    Foreground="#FF666666"
                                    Text="CLASS" />
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Text="{Binding TicketClassName}" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="5,0,0,10">
                                <TextBlock
                                    FontSize="9"
                                    FontWeight="Bold"
                                    Foreground="#FF666666"
                                    Text="SEAT" />
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Text="{Binding SeatNumber}" />
                            </StackPanel>

                            <!--  Row 2  -->
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,5,10">
                                <TextBlock
                                    FontSize="9"
                                    FontWeight="Bold"
                                    Foreground="#FF666666"
                                    Text="GATE" />
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Text="{Binding GenerateGate}" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5,0,5,10">
                                <TextBlock
                                    FontSize="9"
                                    FontWeight="Bold"
                                    Foreground="#FF666666"
                                    Text="BOARDING" />
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Text="{Binding Boarding, Mode=OneWay, StringFormat='{}{0: HH:mm}'}" />
                            </StackPanel>

                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="5,0,0,10">
                                <TextBlock
                                    FontSize="9"
                                    FontWeight="Bold"
                                    Foreground="#FF666666"
                                    Text="TERMINAL" />
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Text="T1" />
                            </StackPanel>

                            <!--  Booking Reference  -->
                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                Margin="0,5,0,0">
                                <TextBlock
                                    FontSize="9"
                                    FontWeight="Bold"
                                    Foreground="#FF666666"
                                    Text="BOOKING REFERENCE" />
                                <Border
                                    Margin="0,3,0,0"
                                    Padding="10,6"
                                    Background="White"
                                    BorderBrush="#FFE0E0E0"
                                    BorderThickness="2"
                                    CornerRadius="5">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontFamily="Cascadia Code"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="#FF4A90E2"
                                        Text="{Binding Ticket.TicketId}" />
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!--  QR Code Section  -->
            <Border
                Margin="0,0,0,15"
                Padding="15"
                Background="White"
                BorderBrush="#FFE0E0E0"
                BorderThickness="1"
                CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="8"
                        Direction="315"
                        Opacity="0.2"
                        ShadowDepth="4"
                        Color="#22000000" />
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="#FF666666"
                        Text="SCAN QR CODE FOR CHECK-IN" />

                    <!--  Real QR Code Image  -->
                    <Border
                        Padding="8"
                        Background="White"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="2"
                        CornerRadius="6">
                        <Image
                            x:Name="QRCodeImage"
                            Width="140"
                            Height="140"
                            Stretch="Uniform" />
                    </Border>

                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        FontSize="9"
                        Foreground="#FF999999"
                        Text="Present this code at the airport check-in counter"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!--  Action Buttons  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Background="#FF4A90E2"
                    CornerRadius="8">
                    <Button
                        x:Name="EmailTicket"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="EmailTicket_Click"
                        Content="📧 Email Ticket"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="White" />
                </Border>

                <Border
                    Grid.Column="2"
                    Background="#FF4CAF50"
                    CornerRadius="8">
                    <Button
                        x:Name="DownloadPDF"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="DownloadPDF_Click"
                        Content="📱 Download PDF"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="White" />
                </Border>
            </Grid>

            <!--  Back to Home  -->
            <Border
                Margin="0,10,0,0"
                Background="#FFE0E0E0"
                CornerRadius="8">
                <Button
                    x:Name="BackToHome"
                    Width="160"
                    Height="35"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="BackToHome_Click"
                    Content="🏠 Back to Home"
                    FontSize="12"
                    Foreground="#FF333333" />
            </Border>

        </StackPanel>
    </Grid>
</Window>