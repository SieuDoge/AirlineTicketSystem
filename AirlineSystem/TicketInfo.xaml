<Window
    x:Class="AirlineSystem.TicketInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ticket Information"
    Width="540"
    Height="800">

    <Grid
        Height="912"
        Margin="0,0,0,1"
        Background="#FFF5F5F5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--  Success Animation Background  -->
        <Ellipse
            Width="200"
            Height="200"
            Margin="0,50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Fill="#4CAF50"
            Opacity="0.1" />
        <ScrollViewer
            Margin="0,0,0,130"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="600" Margin="45,16,45,16">

                <!--  Success Header  -->
                <StackPanel
                    Margin="0,0,0,30"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"
                        FontSize="48"
                        Text="✅" />
                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontFamily="Cascadia Code"
                            FontSize="32"
                            FontWeight="Bold"
                            Foreground="#FF4CAF50"
                            Text="BOOKING CONFIRMED!" />
                        <TextBlock
                            Margin="0,5,0,0"
                            HorizontalAlignment="Center"
                            FontSize="14"
                            Foreground="#FF666666"
                            Text="Your flight ticket has been successfully booked" />
                    </StackPanel>
                </StackPanel>

                <!--  Ticket Card  -->
                <Border
                    Margin="0,0,0,20"
                    Background="White"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="2"
                    CornerRadius="20">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Direction="315"
                            Opacity="0.3"
                            ShadowDepth="8"
                            Color="#22000000" />
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Ticket Header  -->
                        <Border
                            Grid.Row="0"
                            Padding="25,20"
                            Background="#FF4A90E2"
                            CornerRadius="18,18,0,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        FontSize="24"
                                        Text="✈️" />
                                    <StackPanel>
                                        <TextBlock
                                            FontFamily="Cascadia Code"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="BOARDING PASS" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#CCFFFFFF"
                                            Text="Electronic Ticket" />
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontFamily="Cascadia Code"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="{Binding Flight.FlightNumber}" />
                            </Grid>
                        </Border>

                        <!--  Main Ticket Content  -->
                        <Grid Grid.Row="1" Margin="25,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Departure  -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,5"
                                    HorizontalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="#FF666666"
                                    Text="DEPARTURE" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontFamily="Cascadia Code"
                                    FontSize="36"
                                    FontWeight="Bold"
                                    Foreground="#FF333333"
                                    Text="{Binding Flight.Departure, Mode=OneWay}" />
                                <TextBlock
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    Foreground="#FF666666"
                                    Text="" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="{Binding Flight.DepartureTime, Mode=OneWay, StringFormat='{}{0:MMM dd, yyyy}'}" />

                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="#FF4A90E2"
                                    Text="{Binding Flight.DepartureTime, Mode=OneWay, StringFormat='{}{0: HH:mm}'}" />
                            </StackPanel>

                            <!--  Plane Icon  -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <Line
                                    Stroke="#FFE0E0E0"
                                    StrokeDashArray="3,3"
                                    StrokeThickness="2"
                                    X1="0"
                                    X2="60"
                                    Y1="20"
                                    Y2="20" />
                                <TextBlock
                                    Margin="0,-12,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="24"
                                    Text="✈️" />
                            </StackPanel>

                            <!--  Arrival  -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock
                                    Margin="0,0,0,5"
                                    HorizontalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="#FF666666"
                                    Text="ARRIVAL" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontFamily="Cascadia Code"
                                    FontSize="36"
                                    FontWeight="Bold"
                                    Foreground="#FF333333"
                                    Text="{Binding Flight.Destination, Mode=OneWay}" />
                                <TextBlock
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    Foreground="#FF666666"
                                    Text="" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Text="{Binding DepartureTimePlus3, Mode=OneWay, StringFormat='{}{0:MMM dd, yyyy}'}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="#FF4A90E2"
                                    Text="{Binding DepartureTimePlus3, Mode=OneWay, StringFormat='{}{0: HH:mm}'}" />
                            </StackPanel>
                        </Grid>

                        <!--  Ticket Details  -->
                        <Border
                            Grid.Row="2"
                            Padding="25,20"
                            Background="#FFF8F9FA"
                            CornerRadius="0,0,18,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Row 1  -->
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,15">
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Foreground="#FF666666"
                                        Text="PASSENGER" />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="{Binding Passenger.Name}" />
                                </StackPanel>

                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="5,0,5,15">
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Foreground="#FF666666"
                                        Text="CLASS" />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="{Binding TicketClassName}" />
                                </StackPanel>

                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="10,0,0,15">
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Foreground="#FF666666"
                                        Text="SEAT" />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="{Binding SeatNumber}" />
                                </StackPanel>

                                <!--  Row 2  -->
                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,15">
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Foreground="#FF666666"
                                        Text="GATE" />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="{Binding GenerateGate}" />
                                </StackPanel>

                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="5,0,5,15">
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Foreground="#FF666666"
                                        Text="BOARDING" />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="{Binding Boarding, Mode=OneWay, StringFormat='{}{0: HH:mm}'}" />
                                </StackPanel>

                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="10,0,0,15">
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Foreground="#FF666666"
                                        Text="TERMINAL" />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Text="T1" />
                                </StackPanel>

                                <!--  Booking Reference  -->
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Margin="0,10,0,0">
                                    <TextBlock
                                        FontSize="10"
                                        FontWeight="Bold"
                                        Foreground="#FF666666"
                                        Text="BOOKING REFERENCE" />
                                    <Border
                                        Margin="0,5,0,0"
                                        Padding="12,8"
                                        Background="White"
                                        BorderBrush="#FFE0E0E0"
                                        BorderThickness="2"
                                        CornerRadius="6">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontFamily="Cascadia Code"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="#FF4A90E2"
                                            Text="{Binding Ticket.TicketId}" />
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!--  QR Code Section - UPDATED WITH REAL QR CODE  -->
                <Border
                    Margin="0,0,0,20"
                    Padding="20"
                    Background="White"
                    BorderBrush="#FFE0E0E0"
                    BorderThickness="1"
                    CornerRadius="15">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="10"
                            Direction="315"
                            Opacity="0.2"
                            ShadowDepth="5"
                            Color="#22000000" />
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,15"
                            HorizontalAlignment="Center"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="#FF666666"
                            Text="SCAN QR CODE FOR CHECK-IN" />

                        <!--  Real QR Code Image  -->
                        <Border
                            Padding="10"
                            Background="White"
                            BorderBrush="#FFE0E0E0"
                            BorderThickness="2"
                            CornerRadius="8">
                            <Image
                                x:Name="QRCodeImage"
                                Width="180"
                                Height="180"
                                Stretch="Uniform" />
                        </Border>

                        <TextBlock
                            Margin="0,15,0,0"
                            HorizontalAlignment="Center"
                            FontSize="11"
                            Foreground="#FF999999"
                            Text="Present this code at the airport check-in counter"
                            TextWrapping="Wrap"
                            TextAlignment="Center" />
                    </StackPanel>
                </Border>

                <!--  Action Buttons  -->
                <Grid MaxWidth="400">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Column="0"
                        Background="#FF4A90E2"
                        CornerRadius="8">
                        <Button
                            x:Name="EmailTicket"
                            Height="50"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="EmailTicket_Click"
                            Content="📧 Email Ticket"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White" />
                    </Border>

                    <Border
                        Grid.Column="2"
                        Background="#FF4CAF50"
                        CornerRadius="8">
                        <Button
                            x:Name="DownloadPDF"
                            Height="50"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="DownloadPDF_Click"
                            Content="📱 Download PDF"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="White" />
                    </Border>
                </Grid>

                <!--  Back to Home  -->
                <Border
                    Margin="0,15,0,0"
                    Background="#FFE0E0E0"
                    CornerRadius="8">
                    <Button
                        x:Name="BackToHome"
                        Width="200"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BackToHome_Click"
                        Content="🏠 Back to Home"
                        FontSize="14"
                        Foreground="#FF333333" />
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>