<UserControl
    x:Class="AirlineSystem.Manager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AirlineSystem"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFF8FAFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" MinHeight="50" />
        </Grid.RowDefinitions>


        <!--  Enhanced Header Section  -->

        <Border x:Name="HeaderManager" Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Offset="0" Color="#FF1E40AF" />
                    <GradientStop Offset="0.5" Color="#FF2563EB" />
                    <GradientStop Offset="1" Color="#FF3B82F6" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Direction="270"
                    Opacity="0.3"
                    ShadowDepth="5"
                    Color="#22000000" />
            </Border.Effect>

            <Grid Margin="20,15">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Border
                        Width="50"
                        Height="50"
                        Margin="0,0,15,0"
                        Background="#44FFFFFF"
                        CornerRadius="25">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="👨‍💼" />
                    </Border>
                    <StackPanel>
                        <TextBlock
                            FontFamily="Segoe UI"
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="MANAGEMENT DASHBOARD" />
                        <TextBlock
                            FontSize="12"
                            Foreground="#CCFFFFFF"
                            Text="Admin Panel - Flight Management System" />
                    </StackPanel>
                </StackPanel>

                <!--  Enhanced User Info  -->
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Border
                        Margin="0,0,10,0"
                        Padding="12,6"
                        Background="#44FFFFFF"
                        CornerRadius="15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Text="👤" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="Admin" />
                        </StackPanel>
                    </Border>
                    <Border
                        Width="35"
                        Height="35"
                        Background="#44FFFFFF"
                        CornerRadius="17.5">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="⚙️" />
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content with ScrollViewer  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20,20,20,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Responsive Quick Stats  -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="180" />
                        <ColumnDefinition Width="*" MinWidth="180" />
                        <ColumnDefinition Width="*" MinWidth="180" />
                        <ColumnDefinition Width="*" MinWidth="180" />
                    </Grid.ColumnDefinitions>

                    <!--  Total Flights Card  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        Padding="15"
                        Background="White"
                        BorderBrush="#FFE5E7EB"
                        BorderThickness="1"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="0.08"
                                ShadowDepth="3"
                                Color="#22000000" />
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Border
                                    Width="40"
                                    Height="40"
                                    Margin="0,0,10,0"
                                    Background="#FFF3F4F6"
                                    CornerRadius="20">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="✈️" />
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="#FF6B7280"
                                        Text="Total Flights" />
                                    <TextBlock
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#FF1F2937"
                                        Text="{Binding TotalFlights, Mode=OneWay}" />
                                </StackPanel>
                            </StackPanel>
                            <Border
                                Padding="6,3"
                                Background="#FFDCFCE7"
                                CornerRadius="6">
                                <TextBlock FontSize="10" Foreground="#FF16A34A">
                                    <Run Text="↗ +" />
                                    <Run Text="{Binding TotalFlights, Mode=OneWay}" />
                                    <Run Text=" this month" />
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!--  Total Passengers Card  -->
                    <Border
                        Grid.Column="1"
                        Margin="5,0,5,0"
                        Padding="15"
                        Background="White"
                        BorderBrush="#FFE5E7EB"
                        BorderThickness="1"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="0.08"
                                ShadowDepth="3"
                                Color="#22000000" />
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Border
                                    Width="40"
                                    Height="40"
                                    Margin="0,0,10,0"
                                    Background="#FFECFDF5"
                                    CornerRadius="20">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="👥" />
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="#FF6B7280"
                                        Text="Passengers" />
                                    <TextBlock
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#FF1F2937"
                                        Text="{Binding TotalPassengers, Mode=OneWay}" />
                                </StackPanel>
                            </StackPanel>
                            <Border
                                Padding="6,3"
                                Background="#FFECFDF5"
                                CornerRadius="6">
                                <TextBlock FontSize="10" Foreground="#FF059669">
                                    <Run Text="↗ +" />
                                    <Run Text="{Binding TotalPassengers, Mode=OneWay}" />
                                    <Run Text=" this month" />
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!--  Total Tickets Card  -->
                    <Border
                        Grid.Column="2"
                        Margin="5,0,5,0"
                        Padding="15"
                        Background="White"
                        BorderBrush="#FFE5E7EB"
                        BorderThickness="1"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="0.08"
                                ShadowDepth="3"
                                Color="#22000000" />
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Border
                                    Width="40"
                                    Height="40"
                                    Margin="0,0,10,0"
                                    Background="#FFFEF3E2"
                                    CornerRadius="20">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="🎫" />
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="#FF6B7280"
                                        Text="Tickets Sold" />
                                    <TextBlock
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#FF1F2937"
                                        Text="{Binding TotalTickets, Mode=OneWay}" />
                                </StackPanel>
                            </StackPanel>
                            <Border
                                Padding="6,3"
                                Background="#FFFEF3E2"
                                CornerRadius="6">
                                <TextBlock FontSize="10" Foreground="#FFD97706">
                                    <Run Text="↗ +" />
                                    <Run Text="{Binding TotalTickets, Mode=OneWay}" />
                                    <Run Text=" this month" />
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!--  Revenue Card  -->
                    <Border
                        Grid.Column="3"
                        Margin="10,0,0,0"
                        Padding="15"
                        Background="White"
                        BorderBrush="#FFE5E7EB"
                        BorderThickness="1"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="15"
                                Direction="315"
                                Opacity="0.08"
                                ShadowDepth="3"
                                Color="#22000000" />
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                <Border
                                    Width="40"
                                    Height="40"
                                    Margin="0,0,10,0"
                                    Background="#FFFCE7F3"
                                    CornerRadius="20">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="💰" />
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Foreground="#FF6B7280"
                                        Text="Revenue" />
                                    <TextBlock
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#FF1F2937">
                                        <Run Text="$" />
                                        <Run Text="{Binding TotalRevenue, Mode=OneWay}" />
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <Border
                                Padding="6,3"
                                Background="#FFFCE7F3"
                                CornerRadius="6">
                                <TextBlock FontSize="10" Foreground="#FFBE185D">
                                    <Run Text="↗ +" />
                                    <Run Text="{Binding TotalRevenue, StringFormat={}{0:F0}%, Mode=OneWay}" />
                                    <Run Text=" this month" />
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  Responsive Management Actions Grid  -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="250" />
                        <ColumnDefinition Width="*" MinWidth="250" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MinHeight="200" />
                        <RowDefinition Height="Auto" MinHeight="200" />
                    </Grid.RowDefinitions>

                    <!--  Show All Flights  -->
                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,10,10"
                        Background="White"
                        BorderBrush="#FFE5E7EB"
                        BorderThickness="1"
                        CornerRadius="16"
                        Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="20"
                                Direction="315"
                                Opacity="0.08"
                                ShadowDepth="5"
                                Color="#22000000" />
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Offset="0" Color="#FF4A90E2" />
                                                    <GradientStop Offset="1" Color="#FF357ABD" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="25"
                                                    Direction="315"
                                                    Opacity="0.3"
                                                    ShadowDepth="8"
                                                    Color="#FF4A90E2" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Button
                            x:Name="ShowAllFlights"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ShowAllFlights_Click"
                            Cursor="Hand">
                            <StackPanel
                                Margin="15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Border
                                    Width="70"
                                    Height="70"
                                    Margin="0,0,0,15"
                                    Background="#FF548DFF"
                                    CornerRadius="35">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="36"
                                        Text="✈️" />
                                </Border>
                                <TextBlock
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe UI"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="#FF1F2937"
                                    Text="SHOW ALL FLIGHTS" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#FF6B7280"
                                    Text="View and manage flights"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Button>
                    </Border>

                    <!--  Show All Passengers  -->
                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="10,0,0,10"
                        Background="White"
                        BorderBrush="#FFE5E7EB"
                        BorderThickness="1"
                        CornerRadius="16"
                        Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="20"
                                Direction="315"
                                Opacity="0.08"
                                ShadowDepth="5"
                                Color="#22000000" />
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Offset="0" Color="#FF10B981" />
                                                    <GradientStop Offset="1" Color="#FF059669" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="25"
                                                    Direction="315"
                                                    Opacity="0.3"
                                                    ShadowDepth="8"
                                                    Color="#FF10B981" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Button
                            x:Name="ShowAllPassengers"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ShowAllPassengers_Click"
                            Cursor="Hand">
                            <StackPanel
                                Margin="15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Border
                                    Width="70"
                                    Height="70"
                                    Margin="0,0,0,15"
                                    Background="#FF53F1A7"
                                    CornerRadius="35">
                                    <TextBlock
                                        Margin="0,8,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        FontSize="36"
                                        Text="👥" />
                                </Border>
                                <TextBlock
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe UI"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="#FF1F2937"
                                    Text="SHOW ALL PASSENGERS" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#FF6B7280"
                                    Text="View passenger details"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Button>
                    </Border>

                    <!--  Show All Tickets  -->
                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,10,10,0"
                        Background="White"
                        BorderBrush="#FFE5E7EB"
                        BorderThickness="1"
                        CornerRadius="16"
                        Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="20"
                                Direction="315"
                                Opacity="0.08"
                                ShadowDepth="5"
                                Color="#22000000" />
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Offset="0" Color="#FFF59E0B" />
                                                    <GradientStop Offset="1" Color="#FFD97706" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="25"
                                                    Direction="315"
                                                    Opacity="0.3"
                                                    ShadowDepth="8"
                                                    Color="#FFF59E0B" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Button
                            x:Name="ShowAllTickets"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ShowAllTickets_Click"
                            Cursor="Hand">
                            <StackPanel
                                Margin="15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Border
                                    Width="70"
                                    Height="70"
                                    Margin="0,0,0,15"
                                    Background="#FFFCDBA8"
                                    CornerRadius="35">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="36"
                                        Text="🎫" />
                                </Border>
                                <TextBlock
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe UI"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="#FF1F2937"
                                    Text="SHOW ALL TICKETS" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#FF6B7280"
                                    Text="View all issued tickets"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Button>
                    </Border>

                    <!--  Add New Flight  -->
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,10,0,0"
                        Background="White"
                        BorderBrush="#FFE5E7EB"
                        BorderThickness="1"
                        CornerRadius="16"
                        Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="20"
                                Direction="315"
                                Opacity="0.08"
                                ShadowDepth="5"
                                Color="#22000000" />
                        </Border.Effect>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Offset="0" Color="#FFEC4899" />
                                                    <GradientStop Offset="1" Color="#FFBE185D" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="25"
                                                    Direction="315"
                                                    Opacity="0.3"
                                                    ShadowDepth="8"
                                                    Color="#FFEC4899" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Button
                            x:Name="AddNewFlight"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                            <StackPanel
                                Margin="15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Border
                                    Width="70"
                                    Height="70"
                                    Margin="0,0,0,15"
                                    Background="#FFFF0808"
                                    CornerRadius="35">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="36"
                                        Text="❗" />
                                </Border>
                                <TextBlock
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Center"
                                    FontFamily="Segoe UI"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="#FF1F2937"
                                    Text="UPDATING....." />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#FF6B7280"
                                    Text="COMING SOON"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <!--  Modern Footer  -->

    </Grid>
</UserControl>