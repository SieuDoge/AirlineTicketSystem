<UserControl
    x:Class="AirlineSystem.BookTicket"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AirlineSystem"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FFEBEBEB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>

        <!--  Left Panel - Title and Image  -->
        <Border
            Grid.Column="0"
            Margin="20"
            Background="White"
            BorderBrush="#FFD0D0D0"
            BorderThickness="1"
            CornerRadius="15">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Title  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,40,0,10"
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code"
                    FontSize="36"
                    FontWeight="Bold"
                    Foreground="#FFD527FF"
                    Text="BOOK TICKET" />

                <!--  Subtitle  -->
                <TextBlock
                    Grid.Row="1"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontFamily="Cascadia Code Light"
                    FontSize="14"
                    Foreground="#FF938C8C"
                    Text="Book your flight ticket easily at home" />

                <!--  Airplane Image  -->
                <Viewbox
                    Grid.Row="2"
                    MaxWidth="350"
                    MaxHeight="250"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Image Source="/Image/plane.png" Stretch="Uniform" />
                </Viewbox>
            </Grid>
        </Border>

        <!--  Right Panel - Form  -->
        <Border
            Grid.Column="1"
            Margin="20"
            Padding="0"
            Background="White"
            BorderBrush="#FFD0D0D0"
            BorderThickness="1"
            CornerRadius="15">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ScrollViewer.Resources>
                    <!--  Custom ScrollBar Style  -->
                    <Style TargetType="ScrollBar">
                        <Setter Property="Width" Value="8" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid>
                                        <Border Width="8" Background="Transparent" />
                                        <Track
                                            x:Name="PART_Track"
                                            Width="6"
                                            HorizontalAlignment="Center"
                                            IsDirectionReversed="True">
                                            <Track.Thumb>
                                                <Thumb>
                                                    <Thumb.Template>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border
                                                                Width="6"
                                                                Background="#FFCCCCCC"
                                                                CornerRadius="3">
                                                                <Border.Style>
                                                                    <Style TargetType="Border">
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="Background" Value="#FF999999" />
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>

                <StackPanel Margin="25,20,25,20">

                    <!--  Form Title  -->
                    <TextBlock
                        FontFamily="Cascadia Code"
                        FontSize="13"
                        FontWeight="Bold"
                        Foreground="#FF333333"
                        Text="FILL YOUR INFORMATION" />

                    <!--  Full Name  -->
                    <TextBlock
                        Margin="0,10,0,5"
                        FontWeight="SemiBold"
                        Text="Full Name:" />

                    <Grid>
                        <!--  TextBox  -->
                        <TextBox
                            x:Name="Full_name"
                            Height="35"
                            Padding="10,5"
                            BorderBrush="#FFD0D0D0"
                            BorderThickness="1" />

                        <!--  Placeholder  -->
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="DarkGray"
                            IsHitTestVisible="False"
                            Text="Enter your full name">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=Full_name}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!--  Phone Number  -->
                    <TextBlock
                        Margin="0,15,0,5"
                        FontWeight="SemiBold"
                        Text="Phone Number:" />
                    <Grid>
                        <TextBox
                            x:Name="Phone_Number"
                            Height="35"
                            Padding="10,5"
                            BorderBrush="#FFD0D0D0"
                            BorderThickness="1" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="DarkGray"
                            IsHitTestVisible="False"
                            Text="Enter your Phone Number">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=Phone_Number}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!--  Email  -->
                    <TextBlock
                        Margin="0,15,0,5"
                        FontWeight="SemiBold"
                        Text="Email:" />
                    <Grid>
                        <TextBox
                            x:Name="Email"
                            Height="35"
                            Padding="10,5"
                            BorderBrush="#FFD0D0D0"
                            BorderThickness="1" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="DarkGray"
                            IsHitTestVisible="False"
                            Text="Enter your E-mail">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=Email}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!--  Age  -->
                    <TextBlock
                        Margin="0,15,0,5"
                        FontWeight="SemiBold"
                        Text="Age:" />
                    <Grid>
                        <TextBox
                            x:Name="Age"
                            Height="35"
                            Padding="10,5"
                            BorderBrush="#FFD0D0D0"
                            BorderThickness="1" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="DarkGray"
                            IsHitTestVisible="False"
                            Text="Enter your Age">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=Age}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!--  Gender  -->
                    <TextBlock
                        Margin="0,15,0,10"
                        FontWeight="SemiBold"
                        Text="Gender:" />
                    <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                        <RadioButton
                            x:Name="Male"
                            Margin="0,0,20,0"
                            Content="Male" />
                        <RadioButton
                            x:Name="Female"
                            Margin="0,0,20,0"
                            Content="Female" />
                        <RadioButton x:Name="Unknown" Content="Other" />
                    </StackPanel>

                    <!--  Select Flight Button  -->
                    <Button
                        x:Name="Select_Flight"
                        Height="40"
                        Margin="0,10,0,20"
                        Background="#FF4A90E2"
                        BorderThickness="0"
                        Content="✈️ Select Flight ✈️"
                        Cursor="Hand"
                        FontWeight="Bold"
                        Foreground="White" />

                    <!--  Class Selection  -->
                    <TextBlock
                        Margin="0,0,0,10"
                        FontWeight="SemiBold"
                        Text="Flight Class:" />
                    <StackPanel Margin="0,0,0,20">
                        <RadioButton
                            x:Name="Eco"
                            Margin="0,5,0,5"
                            Content="Economy Class - $200" />
                        <RadioButton
                            x:Name="Bus"
                            Margin="0,5,0,5"
                            Content="Business Class - $450" />
                        <RadioButton
                            x:Name="First"
                            Margin="0,5,0,5"
                            Content="First Class - $800" />
                    </StackPanel>

                    <!--  Action Buttons  -->
                    <Button
                        x:Name="Checkout"
                        Height="45"
                        Margin="0,10,0,15"
                        Background="#FF169029"
                        BorderThickness="0"
                        Content="NEXT"
                        Cursor="Hand"
                        FontFamily="Cascadia Code"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White" />

                    <!--  Bottom Buttons  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button
                            x:Name="Back"
                            Grid.Column="0"
                            Height="35"
                            Margin="0,0,5,0"
                            Background="#FFE0E0E0"
                            BorderThickness="0"
                            Content="🔙 Back"
                            Cursor="Hand"
                            FontSize="14"
                            Foreground="#FF333333" />

                        <Button
                            x:Name="Exit"
                            Grid.Column="1"
                            Height="35"
                            Margin="5,0,0,0"
                            Background="#FFDC3545"
                            BorderThickness="0"
                            Content="EXIT"
                            Cursor="Hand"
                            FontFamily="Cascadia Code"
                            FontWeight="Bold"
                            Foreground="White" />
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </Border>

    </Grid>
</UserControl>